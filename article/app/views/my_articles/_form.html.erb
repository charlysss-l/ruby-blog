<%= form_with model: my_article do |form| %>
  <% if form.object.errors.any? %>
    <p class="error">
      <%= form.object.errors.full_messages.first %>
    </p>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
